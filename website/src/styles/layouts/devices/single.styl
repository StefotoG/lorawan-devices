.device-single
  text-align: center

  .grid
    padding: var(--grid-column-gap)

  &__img
    display: block
    margin: 120px auto 100px
    max-height: 40vh
    max-width: 100%
    width: auto

  &__title
    margin: 0 0 30px
    text-align: center

  &__description
    text-align: center

  &__cta
    display: flex
    justify-content: center
    margin-bottom: var(--ls-l)

    a
      text-decoration: none

  &__specs
    background: var(--c-background-04)
    border-radius: 10px
    box-shadow: var(--bs-01)
    margin-bottom: var(--ls-l)
    padding: var(--cs-xl) var(--cs-xl3)
    text-align: left

    h3
      color: var(--c-text-03)
      margin-top: 0

    ul
      list-style: none
      margin: 0
      padding: 0

    li
      font-size: var(--fs-s)
      padding-bottom: var(--cs-xs)


.contact
  position: fixed
  display: block
  width: 100%
  max-width: 598px
  top: 7.5%
  right: 0
  background: white
  border-radius: var(--br-s)
  box-shadow: 0px 4px 30px rgba(0, 24, 89, 0.05)
  border: 1px solid #D4D3D9
  padding: 1rem
  margin: var(--cs-x3l)
  animation-name: contact-scale
  animation-duration: 200ms
  transform-style: preserve-3d

  &--hidden
    display: none

  h3
    width: 100%
    text-align: left
    font-family: Inter
    font-style: normal
    font-weight: 600
    font-size: 25px
    line-height: 35px
    letter-spacing: -0.02em
    margin: 0

  button
    width: 100%
    margin: 0

  label
    width: 100%
    margin-bottom: 12px
    text-align: left
    display: inline-block
    color: #29292B
    font-family: 'Inter'

  textarea, input
    width:100%
    padding: 10px
    border: 0.5px solid #929196
    border-radius: 8px
    font-size: 16px

    &::placeholder
      color: #B7B6BC

@keyframes contact-scale {
  from {
    transform: translate3d(0, 15px, 0) scale3d(0.9, 0.9, 1)
    opacity: 0
  }
  to {
    transform: translate3d(0, 0, 0) scale3d(1, 1, 1)
    opacity: 1
  }
}
